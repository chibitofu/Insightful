<div class="container">
  <div class="watson">
    <%= form_tag("/search", :method => "POST", :class => 'form') do %>
        <h2><%= label_tag(:title, "Search Title") %></h2>
        <p><%= text_field_tag(:title, nil, :required => true, maxlength: 50, minlength: 3 ) %></p>
        <h2><%= label_tag(:q, "Search for:") %></h2>
        <%= text_area_tag(:q, nil, :required => true, size: "80x20", maxlength: 25000, minlength: 1000 ) %>
      <div class="clear">
        <%= submit_tag("Search") %>
      <% end %>
  </div>
  <div class="twitter">
    <%= form_tag("/twitter/search", :method => "POST") do %>
        <h2><%= label_tag(:q, "Search for:") %></h2>
        <%= text_area_tag(:q, nil, :required => true, size: "80x20", maxlength: 50, minlength: 3) %>
        <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>
<section id="slide-1" class="homeSlide">
    <div class="bcg"
        data-center="background-position: 50% 0px;"
        data-top-bottom="background-position: 50% -100px;"
        data-anchor-target="#slide-1">
        <div class="hsContainer">
            <div class="hsContent"
                data-center="opacity: 1"
                data-106-top="opacity: 0"
                data-anchor-target="#slide-1 h2">
                <h2>Fade out elements before <br>they leave viewport</h2>
            </div>
        </div>
    </div>
</section>

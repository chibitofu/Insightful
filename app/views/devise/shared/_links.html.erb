
<% if user_signed_in? %>
	  
	  <li>
	 	 <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
	  </li>
	<% else %>
	 
	<%- if controller_name != 'sessions' %>
	  <li>

	  <%= link_to "Login", "#login", "data-toggle" => "modal", :class => 'btn btn-small' %>
	  </li>	
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<li>
	 
	  <%= link_to "Sign up", "#sign_up", "data-toggle" => "modal", :class => 'btn btn-small' %>
	  </li>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		<li>

		<%= link_to "Forgot your password?", "#forgot_password", "data-toggle" => "modal", :class => 'btn btn-small' %>
	  </li>
	<% end -%>
<% end -%>

